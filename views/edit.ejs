<%- include("partials/header", { title: "Edit Expense" }) %>

<div class="min-h-screen bg-zinc-900 text-white flex items-center justify-center p-6">
  <form action="/expenses/update/<%= expense._id %>" method="POST"
    class="bg-zinc-800 p-6 rounded-lg shadow-lg w-full max-w-md flex flex-col gap-4">

    <h2 class="text-2xl font-bold text-center mb-4">Edit Expense</h2>

    <input type="number" name="amount" value="<%= expense.amount %>" required
      class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600" />

    <input type="text" name="description" value="<%= expense.description %>"
      class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600" />

    <input type="text" name="category" value="<%= expense.category %>"
      class="w-full p-3 rounded bg-gray-700 text-white border border-gray-600" />

    <button type="submit"
      class="bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-semibold">
      ✏️ Update
    </button>

    <a href="/expenses" class="text-blue-400 font-semibold text-center">← Back to Expenses</a>
  </form>
</div>

<%- include("partials/footer") %>
